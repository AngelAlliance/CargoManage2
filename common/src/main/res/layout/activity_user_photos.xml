<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_camera"
        android:text="@string/str_photograph"
        android:gravity="center"
        android:background="@drawable/selector_actionsheet_top"
        android:textColor="@color/secondary_color_666666"
        android:textSize="@dimen/majority_text"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/text_view_photos"
        android:text="@string/str_select_album"
        android:gravity="center"
        android:background="@drawable/selector_actionsheet_bottom"
        android:textColor="@color/secondary_color_666666"
        android:textSize="@dimen/majority_text"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/text_view_cancel"
        android:text="@string/str_cancel"
        android:gravity="center"
        android:background="@drawable/actionsheet_single_selector"
        android:textColor="@color/main_color_098dbe"
        android:textSize="@dimen/majority_text"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>