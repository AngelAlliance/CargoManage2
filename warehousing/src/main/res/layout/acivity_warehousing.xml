<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_color_ffffff">

    <com.sz.ljs.common.view.TitleView
        android:id="@+id/tv_titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/str_rk" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_titleView"
        android:layout_marginBottom="@dimen/large_fillet_button_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/large_fillet_button_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:visibility="visible">
            <!--按预报客户操作-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:background="@color/color_f6"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_yubaokehu"
                    android:layout_width="@dimen/title_bar_heighr"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:padding="7dp"
                    android:src="@mipmap/fb_g" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_aybkhcz"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <!--客户代码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_khdm"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <TextView
                    android:id="@+id/et_kehudaima"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qxz"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
                <EditText
                    android:id="@+id/et_khdaimabiaoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--运单号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:layout_weight="5"
                    android:background="@drawable/login_edittext_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_ydh"
                        android:textColor="@color/secondary_color_333333"
                        android:textSize="@dimen/majority_text" />

                    <EditText
                        android:id="@+id/et_yundanhao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/str_qsr"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_scan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/scan_bg"
                        android:padding="5dp"
                        android:src="@mipmap/ic_scan" />
                </LinearLayout>
            </LinearLayout>



            <!--客户参考单号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_khckdh"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_kehucankaodanhao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <!--目的国家-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_mdgj"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <TextView
                    android:id="@+id/et_mudiguojia"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/str_qxz"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />

                <LinearLayout
                    android:id="@+id/ll_mudiguojia"
                    android:layout_width="@dimen/title_bar_heighr"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mudiguojia"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@mipmap/down_icon" />
                </LinearLayout>
            </LinearLayout>

            <!--销售产品-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_xscp"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <TextView
                    android:id="@+id/et_xiaoshouchanpin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qxz"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />

                <LinearLayout
                    android:id="@+id/ll_xiaoshouchanpin"
                    android:layout_width="@dimen/title_bar_heighr"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_xiaoshouchanpin"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@mipmap/down_icon" />
                </LinearLayout>
            </LinearLayout>

            <!--件数-->
            <LinearLayout
                android:id="@+id/ll_jianshu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_js"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_jianshu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="@string/str_qsr"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
                <TextView
                    android:id="@+id/tv_jianshu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <!--实重-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext_bg"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_szqk"
                        android:textColor="@color/secondary_color_333333"
                        android:textSize="@dimen/majority_text" />

                    <EditText
                        android:id="@+id/et_shizhong"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/str_qsr"
                        android:inputType="number|numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_duojian"
                        android:layout_width="86dp"
                        android:layout_height="40dp"
                        android:background="@drawable/pack_btn_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:src="@mipmap/icon_duojian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="@string/str_dj"
                            android:textColor="@color/secondary_color_333333"
                            android:textSize="@dimen/majority_text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--长宽高-->
            <LinearLayout
                android:id="@+id/ll_changkuangao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <!--长-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_chang"
                        android:textColor="@color/secondary_color_333333"
                        android:textSize="@dimen/majority_text" />

                    <EditText
                        android:id="@+id/et_chang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/str_qsr"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>
                <!--宽-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_kuan"
                        android:textColor="@color/secondary_color_333333"
                        android:textSize="@dimen/majority_text" />

                    <EditText
                        android:id="@+id/et_kuan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/str_qsr"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>
                <!--高-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/title_bar_heighr"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_edittext_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/str_gao"
                        android:textColor="@color/secondary_color_333333"
                        android:textSize="@dimen/majority_text" />

                    <EditText
                        android:id="@+id/et_gao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/str_qsr"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>
            </LinearLayout>
            <!--到货总单-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="47dp"
                android:background="@drawable/login_edittext_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/str_dhzd"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/et_daohuozongdan"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                    <TextView
                        android:id="@+id/et_daohuozongdan1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/secondary_color_333333"
                        android:textColorHint="@color/secondary_color_cccccc"
                        android:textSize="@dimen/majority_text" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_fillet_button_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_qianru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loging_button_bg"
            android:gravity="center"
            android:text="@string/str_qr"
            android:textColor="@color/secondary_color_ffffff"
            android:textSize="@dimen/majority_text" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/secondary_color_ffffff" />

        <Button
            android:id="@+id/btn_fujiafuwu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/loging_button_bg"
            android:gravity="center"
            android:text="@string/str_fjfw"
            android:textColor="@color/secondary_color_ffffff"
            android:textSize="@dimen/majority_text" />
    </LinearLayout>
</RelativeLayout>