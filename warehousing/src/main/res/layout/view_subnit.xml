<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/subnit_bg"
        android:layout_marginTop="5dp"
        android:padding="4dp">
        <!--运单号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_weight="3"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/zdh"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_zidanhao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/scan_bg"
                    android:padding="5dp"
                    android:src="@mipmap/ic_scan" />
            </LinearLayout>
        </LinearLayout>

        <!--实重-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_weight="1"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_szqk"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_shizhong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_shanchu"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/loging_button_bg"
                    android:gravity="center"
                    android:text="@string/str_shanchu"
                    android:textColor="@color/secondary_color_ffffff"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>
        </LinearLayout>
        <!--长宽高-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <!--长-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_weight="1"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_chang"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_chang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>
            <!--宽-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_kuan"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_kuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>
            <!--高-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_gao"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_gao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>