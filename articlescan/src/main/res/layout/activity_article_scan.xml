<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color_ffffff"
    android:orientation="vertical">

    <com.sz.ljs.common.view.TitleView
        android:id="@+id/tv_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/str_djsm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_titles"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <!--到件时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/str_djsj"
                android:textColor="@color/secondary_color_333333"
                android:textSize="@dimen/majority_text" />

            <TextView
                android:id="@+id/tv_arrive_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_qxz"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_cccccc"
                android:textSize="@dimen/majority_text" />

            <LinearLayout
                android:id="@+id/ll_arrive_time"
                android:layout_width="@dimen/title_bar_heighr"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_arrive_time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/down_icon" />
            </LinearLayout>
        </LinearLayout>
        <!--上一站-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/str_syz"
                android:textColor="@color/secondary_color_333333"
                android:textSize="@dimen/majority_text" />

            <TextView
                android:id="@+id/tv_last_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_qxz"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_cccccc"
                android:textSize="@dimen/majority_text" />

            <LinearLayout
                android:id="@+id/ll_last_station"
                android:layout_width="@dimen/title_bar_heighr"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_last_station"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/down_icon" />
            </LinearLayout>
        </LinearLayout>
        <!--服务渠道-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/str_fwqd"
                android:textColor="@color/secondary_color_333333"
                android:textSize="@dimen/majority_text" />

            <TextView
                android:id="@+id/tv_qudao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_qxz"
                android:singleLine="true"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_cccccc"
                android:textSize="@dimen/majority_text" />

            <LinearLayout
                android:id="@+id/ll_qudao"
                android:layout_width="@dimen/title_bar_heighr"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_qudao"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/down_icon" />
            </LinearLayout>
        </LinearLayout>
        <!--条形编码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_weight="5"
                android:background="@drawable/login_edittext_bg"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/tv_yundanhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_tmbh"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <EditText
                    android:id="@+id/et_yundanhao"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/str_qsr"
                    android:singleLine="true"
                    android:textColor="@color/secondary_color_333333"
                    android:textColorHint="@color/secondary_color_cccccc"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/scan_bg"
                    android:padding="5dp"
                    android:src="@mipmap/ic_scan" />
            </LinearLayout>
        </LinearLayout>
        <!--按钮布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >
            <!--按钮布局-->
            <GridView
                android:id="@+id/gv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="4dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="10dp"
                android:visibility="gone" />
            <com.sz.ljs.common.view.SyncHorizontalScrollView
                android:id="@+id/header_horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <com.sz.ljs.common.view.NoscrollListView
                    android:id="@+id/lv_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible" />
            </com.sz.ljs.common.view.SyncHorizontalScrollView>
            <ScrollView
                android:id="@+id/scroll_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.sz.ljs.common.view.SyncHorizontalScrollView
                        android:id="@+id/data_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <com.sz.ljs.common.view.NoscrollExpandableListView
                            android:id="@+id/lv_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:groupIndicator="@null"/>

                    </com.sz.ljs.common.view.SyncHorizontalScrollView>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>