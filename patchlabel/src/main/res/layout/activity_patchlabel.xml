<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sz.ljs.common.view.TitleView
        android:id="@+id/tv_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/str_bdbq" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <!--单号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_ydh"
                android:textColor="@color/secondary_color_333333"
                android:textSize="@dimen/majority_text" />

            <ImageView
                android:id="@+id/iv_chose"
                android:layout_width="@dimen/title_bar_heighr"
                android:layout_height="@dimen/title_bar_heighr"
                android:padding="8dp"
                android:src="@mipmap/ic_arrow_chose" />

            <EditText
                android:id="@+id/et_danhao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_qsr"
                android:singleLine="true"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_cccccc"
                android:textSize="@dimen/majority_text" />
        </LinearLayout>

        <!--件数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_js"
                android:textColor="@color/secondary_color_333333"
                android:textSize="@dimen/majority_text" />

            <EditText
                android:id="@+id/et_jianshu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/str_qsr"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_cccccc"
                android:textSize="@dimen/majority_text" />
        </LinearLayout>

        <!--打印按钮-->
        <RelativeLayout
            android:id="@+id/ll_dayin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="35dp"
            android:background="@drawable/loging_button_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="@dimen/title_bar_heighr"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginLeft="15dp"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_dybq"
                android:textColor="@color/secondary_color_ffffff"
                android:textSize="@dimen/majority_text" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>