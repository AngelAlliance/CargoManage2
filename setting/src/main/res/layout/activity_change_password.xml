<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color_ffffff"
    android:orientation="vertical">

    <com.sz.ljs.common.view.TitleView
        android:id="@+id/tv_titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/str_xgmm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_gh"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <TextView
                    android:id="@+id/tv_gohao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/secondary_color_999999"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_heighr"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_name"
                    android:textColor="@color/secondary_color_333333"
                    android:textSize="@dimen/majority_text" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/secondary_color_999999"
                    android:textSize="@dimen/majority_text" />
            </LinearLayout>
        </LinearLayout>

        <!--原密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_oldPassword"
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_ymm"
                android:inputType="textPassword"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_999999"
                android:textSize="@dimen/majority_text" />

            <ImageView
                android:id="@+id/img_view_oldpwd_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/user_login_input_margin"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:src="@mipmap/delete_et"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/according_oldPwd_tb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/user_login_accordingpwd_selector"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />
        </LinearLayout>

        <!--新密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_newPassword"
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_xmm"
                android:inputType="textPassword"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_999999"
                android:textSize="@dimen/majority_text" />

            <ImageView
                android:id="@+id/img_view_newpwd_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/user_login_input_margin"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:src="@mipmap/delete_et"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/according_newPwd_tb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/user_login_accordingpwd_selector"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />
        </LinearLayout>

        <!--新密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_querenPassword"
                android:layout_width="0dp"
                android:layout_height="@dimen/title_bar_heighr"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/str_qrmm"
                android:inputType="textPassword"
                android:textColor="@color/secondary_color_333333"
                android:textColorHint="@color/secondary_color_999999"
                android:textSize="@dimen/majority_text" />

            <ImageView
                android:id="@+id/img_view_querenpwd_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/user_login_input_margin"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:src="@mipmap/delete_et"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/according_querenPwd_tb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/user_login_accordingpwd_selector"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_heighr"
            android:layout_marginTop="10dp"
            android:background="@drawable/loging_button_bg"
            android:text="@string/str_yes"
            android:textColor="@color/secondary_color_ffffff"
            android:textSize="@dimen/majority_text" />

    </LinearLayout>
</LinearLayout>